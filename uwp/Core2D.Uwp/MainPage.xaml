<Page x:Class="Core2D.Uwp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Core2D.Uwp"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
      xmlns:Project="using:Core2D.Project"
      xmlns:Style="using:Core2D.Style"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      UseLayoutRounding="True">
    <Page.TopAppBar>
        <CommandBar Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" FlowDirection="RightToLeft" IsOpen="False" IsSticky="True" ClosedDisplayMode="Compact">
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="SelectAll" Label="Select All" Command="{Binding EditorCommands.SelectAllCommand}"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Delete" Label="Delete" Command="{Binding EditorCommands.DeleteCommand}"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Paste" Label="Paste" Command="{Binding EditorCommands.PasteCommand}"/>
                <AppBarButton Icon="Copy" Label="Copy" Command="{Binding EditorCommands.CopyCommand}"/>
                <AppBarButton Icon="Cut" Label="Cut" Command="{Binding EditorCommands.CutCommand}"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Redo" Label="Redo" Command="{Binding EditorCommands.RedoCommand}"/>
                <AppBarButton Icon="Undo" Label="Undo" Command="{Binding EditorCommands.UndoCommand}"/>
                <AppBarSeparator/>
                <AppBarButton Icon="SaveLocal" Label="Save As" Command="{Binding EditorCommands.SaveAsCommand}"/>
                <AppBarButton Icon="OpenFile" Label="Open" Command="{Binding EditorCommands.OpenCommand}"/>
                <AppBarSeparator/>
                <AppBarButton Icon="Page2" Label="New" Command="{Binding EditorCommands.NewCommand}" CommandParameter="{Binding}"/>
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="None" Command="{Binding EditorCommands.ToolLineCommand}"/>
                <AppBarButton Label="Selection" Command="{Binding EditorCommands.ToolSelectionCommand}"/>
                <AppBarButton Label="Point" Command="{Binding EditorCommands.ToolPointCommand}"/>
                <AppBarButton Label="Line" Command="{Binding EditorCommands.ToolLineCommand}"/>
                <AppBarButton Label="Arc" Command="{Binding EditorCommands.ToolArcCommand}"/>
                <AppBarButton Label="Bezier" Command="{Binding EditorCommands.ToolCubicBezierCommand}"/>
                <AppBarButton Label="QBezier" Command="{Binding EditorCommands.ToolQuadraticBezierCommand}"/>
                <AppBarButton Label="Path" Command="{Binding EditorCommands.ToolPathCommand}"/>
                <AppBarButton Label="Rectangle" Command="{Binding EditorCommands.ToolRectangleCommand}"/>
                <AppBarButton Label="Ellipse" Command="{Binding EditorCommands.ToolEllipseCommand}"/>
                <AppBarButton Label="Text" Command="{Binding EditorCommands.ToolTextCommand}"/>
                <AppBarButton Label="Image" Command="{Binding EditorCommands.ToolImageCommand}"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.TopAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="11"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="11"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- Left -->
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="11"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!-- Top -->
            <ComboBox x:Name="DocumentsComboBox"
                      ItemsSource="{Binding Project.Documents, Mode=TwoWay}" 
                      SelectedItem="{Binding Project.CurrentDocument, Mode=TwoWay}" 
                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                      HorizontalAlignment="Stretch"
                      Grid.Row="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="Project:XDocument">
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!-- Splitter -->
            <controls:GridSplitter Grid.Row="1" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="11" HorizontalAlignment="Stretch"/>
            <!-- Bottom -->
            <ListBox x:Name="ContainersListBox"
                     ItemsSource="{Binding Project.CurrentDocument.Pages, Mode=TwoWay}" 
                     SelectedItem="{Binding Project.CurrentContainer, Mode=TwoWay}" 
                     SelectionChanged="ContainersListBox_SelectionChanged"
                     Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                     Grid.Row="2">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="Project:XContainer">
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!-- Splitter -->
        <controls:GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Width="11" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <!-- Content -->
        <Grid Margin="10" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
            <canvas:CanvasControl x:Name="canvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
        <!-- Splitter -->
        <controls:GridSplitter Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Width="11" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <!-- Right -->
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Grid.Column="4" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="11"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!-- Top -->
            <ComboBox x:Name="StyleLibrariesComboBox"
                      ItemsSource="{Binding Project.StyleLibraries, Mode=TwoWay}" 
                      SelectedItem="{Binding Project.CurrentStyleLibrary, Mode=TwoWay}" 
                      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                      HorizontalAlignment="Stretch"
                      Grid.Row="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!-- Splitter -->
            <controls:GridSplitter Grid.Row="1" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="11" HorizontalAlignment="Stretch"/>
            <!-- Bottom -->
            <ListBox x:Name="StylesListBox"
                     ItemsSource="{Binding Project.CurrentStyleLibrary.Items, Mode=TwoWay}" 
                     SelectedItem="{Binding Project.CurrentStyleLibrary.Selected, Mode=TwoWay}" 
                     Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                     Grid.Row="2">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="Style:BaseStyle">
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Page>
