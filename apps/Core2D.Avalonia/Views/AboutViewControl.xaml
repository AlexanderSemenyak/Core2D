<UserControl x:Class="Core2D.Avalonia.Views.AboutViewControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Core2D.Avalonia;assembly=Core2D.Avalonia">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
        <!-- Title -->
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Classes="aboutTitle" x:Name="textTitle" Text="--"/>
        <!-- Version -->
        <TextBlock Grid.Column="0" Grid.Row="1" Classes="aboutText" Text="Version"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Classes="aboutText" x:Name="textVersion" Text="--"/>
        <!-- About -->
        <TextBlock Grid.Column="0" Grid.Row="2" Classes="aboutText" Text="About"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Classes="aboutText" x:Name="textAbout" Text="--"/>
        <!-- Copyright -->
        <TextBlock Grid.Column="0" Grid.Row="3" Classes="aboutText" Text="Copyright"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Classes="aboutText" x:Name="textCopyright" Text="--"/>
        <!-- License -->
        <TextBlock Grid.Column="0" Grid.Row="4" Classes="aboutText" Text="License"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Classes="aboutText" x:Name="textLicense" Text="--"/>
        <!-- Runtime: OperatingSystem -->
        <TextBlock Grid.Column="0" Grid.Row="5" Classes="aboutText" Text="OperatingSystem"/>
        <TextBlock Grid.Column="1" Grid.Row="5" Classes="aboutText" x:Name="textOperatingSystem" Text="--"/>
        <!-- Runtime: IsDesktop -->
        <TextBlock Grid.Column="0" Grid.Row="6" Classes="aboutText" Text="IsDesktop"/>
        <TextBlock Grid.Column="1" Grid.Row="6" Classes="aboutText" x:Name="textIsDesktop" Text="--"/>
        <!-- Runtime: IsMobile -->
        <TextBlock Grid.Column="0" Grid.Row="7" Classes="aboutText" Text="IsMobile"/>
        <TextBlock Grid.Column="1" Grid.Row="7" Classes="aboutText" x:Name="textIsMobile" Text="--"/>
        <!-- Runtime: IsCoreClr -->
        <TextBlock Grid.Column="0" Grid.Row="8" Classes="aboutText" Text="IsCoreClr"/>
        <TextBlock Grid.Column="1" Grid.Row="8" Classes="aboutText" x:Name="textIsCoreClr" Text="--"/>
        <!-- Runtime: IsMono -->
        <TextBlock Grid.Column="0" Grid.Row="9" Classes="aboutText" Text="IsMono"/>
        <TextBlock Grid.Column="1" Grid.Row="9" Classes="aboutText" x:Name="textIsMono" Text="--"/>
        <!-- Runtime: IsDotNetFramework -->
        <TextBlock Grid.Column="0" Grid.Row="10" Classes="aboutText" Text="IsDotNetFramework"/>
        <TextBlock Grid.Column="1" Grid.Row="10" Classes="aboutText" x:Name="textIsDotNetFramework" Text="--"/>
        <!-- Runtime: IsUnix -->
        <TextBlock Grid.Column="0" Grid.Row="11" Classes="aboutText" Text="IsUnix"/>
        <TextBlock Grid.Column="1" Grid.Row="11" Classes="aboutText" x:Name="textIsUnix" Text="--"/>
        <!-- WindowingSubsystem -->
        <TextBlock Grid.Column="0" Grid.Row="12" Classes="aboutText" Text="WindowingSubsystem"/>
        <TextBlock Grid.Column="1" Grid.Row="12" Classes="aboutText" x:Name="textWindowingSubsystem" Text="--"/>
        <!-- RenderingSubsystem -->
        <TextBlock Grid.Column="0" Grid.Row="13" Classes="aboutText" Text="RenderingSubsystem"/>
        <TextBlock Grid.Column="1" Grid.Row="13" Classes="aboutText" x:Name="textRenderingSubsystem" Text="--"/>
    </Grid>
</UserControl>
