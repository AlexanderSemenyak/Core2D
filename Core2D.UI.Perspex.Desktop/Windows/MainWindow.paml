<Window x:Class="Core2D.UI.Perspex.Desktop.MainWindow"
        xmlns="https://github.com/perspex"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Core2D.UI.Perspex.Desktop;assembly=Core2D.UI.Perspex.Desktop"
        xmlns:converters="clr-namespace:Core2D.UI.Perspex.Desktop.Converters;assembly=Core2D.UI.Perspex.Desktop"
        xmlns:controls="clr-namespace:Core2D.UI.Perspex.Desktop.Controls;assembly=Core2D.UI.Perspex.Desktop"
        xmlns:core="clr-namespace:Core2D;assembly=Core2D"
        Width="1324" Height="670"
        Background="#FFFFFFFF"
        UseLayoutRounding="True">
    <Window.Title>
        <MultiBinding Mode="OneWay" Converter="{Static converters:EditorToTitleMultiConverter.Instance}">
            <Binding SourcePropertyPath="Editor.Project.Name"/>
            <Binding SourcePropertyPath="Editor.IsProjectDirty"/>
        </MultiBinding>
    </Window.Title>
    <Grid RowDefinitions="Auto,*,Auto">
        <controls:MenuControl Grid.Row="0"/>
        <controls:EditorControl Grid.Row="1" IsVisible="{Binding Path=Editor.Project, Converter={Static converters:IsNotNullConverter.Instance}}"/>
        <controls:DashboardControl Grid.Row="1" IsVisible="{Binding Path=Editor.Project, Converter={Static converters:IsNullConverter.Instance}}"/>
        <controls:StatusControl Grid.Row="2" IsVisible="{Binding Path=Editor.Project, Converter={Static converters:IsNotNullConverter.Instance}}"/>
    </Grid>
</Window>
