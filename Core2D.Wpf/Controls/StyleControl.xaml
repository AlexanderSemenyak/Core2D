<UserControl x:Class="Core2D.Wpf.Controls.StyleControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:core="clr-namespace:Core2D;assembly=Core2D" 
             xmlns:converters="clr-namespace:Core2D.Wpf.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid>
        <ContentControl Margin="2">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Setter Property="Content" Value="{Binding Editor.Project.CurrentStyleLibrary.Selected}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Editor.Project.CurrentStyleLibrary.Selected}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Setter Property="Content" Value="{x:Null}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>
