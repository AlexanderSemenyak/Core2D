<UserControl x:Class="Core2D.Wpf.Controls.Data.RecordsControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Core2D.Wpf" 
             xmlns:converters="clr-namespace:Core2D.Wpf.Converters" 
             xmlns:core="clr-namespace:Core2D;assembly=Core2D" 
             xmlns:custom="clr-namespace:Core2D.Wpf.Controls.Custom"
             mc:Ignorable="d" 
             d:DataContext="{x:Static local:DesignerHelper.Database}"
             d:DesignWidth="540" d:DesignHeight="400">
    <Grid>
        <Grid.Resources>
            <ControlTemplate x:Key="RecordsMenu">
                <Menu Background="Transparent" HorizontalAlignment="Right">
                    <MenuItem Header="apply" Command="{x:Static core:Commands.ApplyRecordCommand}" CommandParameter="{Binding CurrentRecord}"/>
                    <MenuItem Command="{x:Static core:Commands.AddRecordCommand}" Header="+"/>
                    <MenuItem Command="{x:Static core:Commands.RemoveRecordCommand}" Header="-"/>
                </Menu>
            </ControlTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Control Template="{StaticResource RecordsMenu}" Grid.Row="0" Margin="2,0,2,0"/>
        <TabControl Grid.Row="1" Margin="2,2,2,0">
            <TabControl.Resources>
                <Style TargetType="DataGrid">
                    <Setter Property="CanUserReorderColumns" Value="True"/>
                    <Setter Property="CanUserResizeColumns" Value="True"/>
                    <Setter Property="CanUserResizeRows" Value="True"/>
                    <Setter Property="CanUserSortColumns" Value="True"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="Records">
                <custom:RecordsListView ItemsSource="{Binding Records}" SelectedItem="{Binding CurrentRecord}" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"/>
            </TabItem>
            <TabItem Header="Columns">
                <DataGrid ItemsSource="{Binding Columns}"/>
            </TabItem>
            <TabItem Header="Values">
                <DataGrid ItemsSource="{Binding Records}">
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DataGrid ItemsSource="{Binding Values}"/>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
