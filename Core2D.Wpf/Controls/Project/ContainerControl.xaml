<UserControl x:Class="Core2D.Wpf.Controls.ContainerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Core2D.Wpf" 
             xmlns:core="clr-namespace:Core2D;assembly=Core2D"
             mc:Ignorable="d" 
             d:DataContext="{x:Static core:DesignerContext.Context}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="2">
        <ContentControl Content="{Binding Editor.Project.CurrentContainer, FallbackValue={x:Null}}"/>
    </Grid>
</UserControl>
