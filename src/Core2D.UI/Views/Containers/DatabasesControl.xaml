<UserControl x:Class="Core2D.UI.Views.Containers.DatabasesControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Core2D.UI.Converters;assembly=Core2D.UI"
             xmlns:Data="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.UI.Designer;assembly=Core2D.UI"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Project}"
             d:DesignWidth="250" d:DesignHeight="400">
    <Grid RowDefinitions="Auto,Auto,*">
        <Grid RowDefinitions="*" ColumnDefinitions="*,Auto" Grid.Row="0">
            <TextBox Text="{Binding CurrentDatabase.Name, Mode=TwoWay}" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Margin="0,0,0,0" IsVisible="{Binding !!$self.DataContext.CurrentDatabase}" Grid.Column="0"/>
            <Menu Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                <MenuItem Header="+" Command="{Binding $parent[Window].DataContext.OnAddDatabase}"/>
                <MenuItem Header="&#727;" Command="{Binding $parent[Window].DataContext.OnRemoveDatabase}" CommandParameter="{Binding CurrentDatabase}" IsVisible="{Binding !!CurrentDatabase}"/>
            </Menu>
        </Grid>
        <ComboBox Items="{Binding Databases}" SelectedItem="{Binding CurrentDatabase, Mode=TwoWay}" Grid.Row="1" IsVisible="{Binding !!CurrentDatabase}" HorizontalAlignment="Stretch">
            <ComboBox.DataTemplates>
                <DataTemplate DataType="Data:IDatabase">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.DataTemplates>
        </ComboBox>
        <ContentControl Content="{Binding CurrentDatabase}" Grid.Row="2"/>
    </Grid>
</UserControl>
