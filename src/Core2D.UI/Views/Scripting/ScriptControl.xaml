<UserControl x:Class="Core2D.UI.Views.Scripting.ScriptControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:Designer="clr-namespace:Core2D.UI.Designer;assembly=Core2D.UI"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Script}"
             d:DesignWidth="1000" d:DesignHeight="600">
    <UserControl.KeyBindings>
        <KeyBinding Command="{Binding $parent[Window].DataContext.OnExecuteRepl}" CommandParameter="{Binding #textCode.Text}" Gesture="Ctrl+Enter"/>
    </UserControl.KeyBindings>
    <Grid RowDefinitions="*,Auto" ColumnDefinitions="50*,50*">
        <TextBox x:Name="textCode" Text="{Binding Code}" FontFamily="{DynamicResource UiFontFamily}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" Margin="3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Content="Reset" Command="{Binding $parent[Window].DataContext.OnResetRepl}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="3" Grid.Row="1" Grid.Column="0"/>
        <Button Content="Execute" Command="{Binding $parent[Window].DataContext.OnExecuteRepl}" CommandParameter="{Binding #textCode.Text}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="3" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</UserControl>
