<UserControl x:Class="Core2D.UI.Views.Data.DatabaseControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:idd="clr-namespace:Core2D.UI.DragAndDrop;assembly=Core2D.UI"
             xmlns:converters="clr-namespace:Core2D.UI.Converters;assembly=Core2D.UI"
             xmlns:Core="clr-namespace:Core2D;assembly=Core2D"
             xmlns:Data="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.UI.Designer;assembly=Core2D.UI"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Database}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="Data:IDatabase" x:CompileBindings="True">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Name" Margin="{DynamicResource TextControlThemePadding}"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}" x:DataType="Core:IObservableObject"/>
        </StackPanel>
        <TabControl>
            <TabItem Header="Records" Padding="0,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <Menu Grid.Row="0" HorizontalAlignment="Right">
                        <!--<MenuItem Header="apply" Command="{Binding $parent[Window].DataContext.OnApplyRecord}" CommandParameter="{Binding CurrentRecord}" IsVisible="{Binding !!CurrentRecord}"/>-->
                        <MenuItem Header="apply" CommandParameter="{Binding CurrentRecord}" IsVisible="{Binding !!CurrentRecord}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnApplyRecord" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                        <MenuItem Header="+" CommandParameter="{Binding}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnAddRecord" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                        <MenuItem Header="&#727;" CommandParameter="{Binding CurrentRecord}" IsVisible="{Binding !!CurrentRecord}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnRemoveRecord" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                    </Menu>
                    <DataGrid x:Name="rowsDataGrid"
                              Items="{Binding Records}"
                              SelectedItem="{Binding CurrentRecord, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              BorderThickness="0"
                              RowBackground="Transparent"
                              Background="Transparent"
                              Grid.Row="1">
                        <i:Interaction.Behaviors>
                            <idd:TypedDragBehavior DataType="{x:Type Data:IRecord}"/>
                        </i:Interaction.Behaviors>
                        <DataGrid.KeyBindings>
                            <KeyBinding CommandParameter="{Binding #rowsDataGrid.DataContext, Mode=OneWay}" Gesture="Ctrl+N">
                                <KeyBinding.Command>
                                    <Binding Path="$parent[Window].DataContext.OnAddRecord" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                                </KeyBinding.Command>
                            </KeyBinding>
                            <KeyBinding CommandParameter="{Binding #rowsDataGrid.SelectedItem}" Gesture="Delete">
                                <KeyBinding.Command>
                                    <Binding Path="$parent[Window].DataContext.OnRemoveRecord" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                                </KeyBinding.Command>
                            </KeyBinding>
                        </DataGrid.KeyBindings>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Current Record" Padding="12,0,0,0">
                <ContentControl Content="{Binding CurrentRecord}"/>
            </TabItem>
            <TabItem Header="Columns" Padding="12,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <Menu Grid.Row="0" HorizontalAlignment="Right">
                        <MenuItem Header="&#727;" CommandParameter="{Binding #columnsDataGrid.SelectedItem}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnRemoveColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                        <MenuItem Header="+" CommandParameter="{Binding}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnAddColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                    </Menu>
                    <DataGrid x:Name="columnsDataGrid"
                              Items="{Binding Columns}"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="False"
                              BorderThickness="0"
                              RowBackground="Transparent"
                              Background="Transparent"
                              Grid.Row="1">
                        <i:Interaction.Behaviors>
                            <idd:TypedDragBehavior DataType="{x:Type Data:IColumn}"/>
                        </i:Interaction.Behaviors>
                        <DataGrid.KeyBindings>
                            <KeyBinding CommandParameter="{Binding}" Gesture="Ctrl+N">
                                <KeyBinding.Command>
                                    <Binding Path="$parent[Window].DataContext.OnAddColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                                </KeyBinding.Command>
                            </KeyBinding>
                            <KeyBinding CommandParameter="{Binding #columnsDataGrid.SelectedItem}" Gesture="Delete">
                                <KeyBinding.Command>
                                    <Binding Path="$parent[Window].DataContext.OnRemoveColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                                </KeyBinding.Command>
                            </KeyBinding>
                        </DataGrid.KeyBindings>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" IsReadOnly="False" Binding="{Binding Name}" x:DataType="Core:IObservableObject"/>
                            <DataGridTextColumn Header="Width" Binding="{Binding Width}" x:DataType="Data:IColumn"/>
                            <DataGridCheckBoxColumn Header="IsVisible" Binding="{Binding IsVisible}" x:DataType="Data:IColumn"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding Owner.Name}" x:DataType="Core:IObservableObject" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" x:DataType="Core:IObservableObject"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <!--
                <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*" >
                    <Menu Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                        <MenuItem Header="+" CommandParameter="{Binding}">
                            <MenuItem.Command>
                                <Binding Path="$parent[Window].DataContext.OnAddColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                            </MenuItem.Command>
                        </MenuItem>
                    </Menu>
                    <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="Name" IsVisible="{Binding !!Columns.Length}"/>
                    <ScrollViewer Grid.Column="0" Grid.Row="2" IsVisible="{Binding !!Columns.Length}">
                        <ItemsControl Items="{Binding Columns}" VerticalAlignment="Stretch">
                            <ItemsControl.DataTemplates>
                                <DataTemplate DataType="Data:IColumn">
                                    <Grid VerticalAlignment="Top" ColumnDefinitions="*,30" Background="Transparent">
                                        <i:Interaction.Behaviors>
                                            <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}"/>
                                        </i:Interaction.Behaviors>
                                        <TextBox Text="{Binding Name, Mode=TwoWay}" Grid.Column="0"/>
                                        <Button Content="-" Grid.Column="1" CommandParameter="{Binding}">
                                            <Button.Command>
                                                <Binding Path="$parent[Window].DataContext.OnRemoveColumn" x:CompileBindings="False" x:DataType="Editor:IProjectEditor"/>
                                            </Button.Command>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.DataTemplates>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                -->
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>
