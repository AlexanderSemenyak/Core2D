<Application x:Class="Core2D.UI.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Core2D.UI;assembly=Core2D.UI"
             xmlns:converters="clr-namespace:Core2D.UI.Converters;assembly=Core2D.UI"
             xmlns:DataCore="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:Dock="clr-namespace:Dock.Model;assembly=Dock.Model"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:PathCore="clr-namespace:Core2D.Path;assembly=Core2D"
             xmlns:SegmentsCore="clr-namespace:Core2D.Path.Segments;assembly=Core2D"
             xmlns:ContainersCore="clr-namespace:Core2D.Containers;assembly=Core2D"
             xmlns:ScriptingCore="clr-namespace:Core2D.Scripting;assembly=Core2D"
             xmlns:RendererCore="clr-namespace:Core2D.Renderer;assembly=Core2D"
             xmlns:SettingsTools="clr-namespace:Core2D.Editor.Tools.Settings;assembly=Core2D"
             xmlns:SettingsPath="clr-namespace:Core2D.Editor.Tools.Path.Settings;assembly=Core2D"
             xmlns:ShapesCore="clr-namespace:Core2D.Shapes;assembly=Core2D"
             xmlns:StyleCore="clr-namespace:Core2D.Style;assembly=Core2D"
             xmlns:data="clr-namespace:Core2D.UI.Views.Data;assembly=Core2D.UI"
             xmlns:path="clr-namespace:Core2D.UI.Views.Path;assembly=Core2D.UI"
             xmlns:containers="clr-namespace:Core2D.UI.Views.Containers;assembly=Core2D.UI"
             xmlns:scripting="clr-namespace:Core2D.UI.Views.Scripting;assembly=Core2D.UI"
             xmlns:settings="clr-namespace:Core2D.UI.Views.Settings;assembly=Core2D.UI"
             xmlns:renderer="clr-namespace:Core2D.UI.Views.Renderer;assembly=Core2D.UI"
             xmlns:settingsTools="clr-namespace:Core2D.UI.Views.Settings.Tools;assembly=Core2D.UI"
             xmlns:settingsPath="clr-namespace:Core2D.UI.Views.Settings.Tools.Path;assembly=Core2D.UI"
             xmlns:shapes="clr-namespace:Core2D.UI.Views.Shapes;assembly=Core2D.UI"
             xmlns:style="clr-namespace:Core2D.UI.Views.Style;assembly=Core2D.UI"
             xmlns:views="clr-namespace:Core2D.UI.Views;assembly=Core2D.UI">
    <Application.Resources>
        <!-- Fonts -->
        <!--<FontFamily x:Key="UiFontFamily">avares://Core2D.UI/Assets/Fonts#Lato</FontFamily>-->
        <!--<FontFamily x:Key="UiFontFamily">avares://Core2D.UI/Assets/Fonts#Noto Sans</FontFamily>-->
        <FontFamily x:Key="UiFontFamily">Segoe UI, SF Pro Display, Noto Sans, Cantarel</FontFamily>
        <!--<FontFamily x:Key="CodeFontFamily">avares://Core2D.UI/Assets/Fonts#Source Code Pro</FontFamily>-->
        <StaticResource x:Key="ContentControlThemeFontFamily" ResourceKey="UiFontFamily" />
        <!-- Brushes -->
        <SolidColorBrush x:Key="TransparentBrush">#00FFFFFF</SolidColorBrush>
        <VisualBrush x:Key="ColorCheckerBoard" TileMode="Tile" Stretch="None" AlignmentX="Left" AlignmentY="Top" SourceRect="0,0,20,20" DestinationRect="0,0,20,20">
            <VisualBrush.Visual>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Rectangle Width="10" Height="10" Fill="DarkGray"/>
                        <Rectangle Width="10" Height="10" Fill="LightGray"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Rectangle Width="10" Height="10" Fill="LightGray"/>
                        <Rectangle Width="10" Height="10" Fill="DarkGray"/>
                    </StackPanel>
                </StackPanel>
            </VisualBrush.Visual>
        </VisualBrush>
        <VisualBrush x:Key="TemplateCheckerBoard" TileMode="Tile" Stretch="None" AlignmentX="Left" AlignmentY="Top" SourceRect="0,0,20,20" DestinationRect="0,0,20,20">
            <VisualBrush.Visual>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Rectangle Width="10" Height="10" Fill="#FFF0F0F0"/>
                        <Rectangle Width="10" Height="10" Fill="#FFF5F5F5"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Rectangle Width="10" Height="10" Fill="#FFF5F5F5"/>
                        <Rectangle Width="10" Height="10" Fill="#FFF0F0F0"/>
                    </StackPanel>
                </StackPanel>
            </VisualBrush.Visual>
        </VisualBrush>
        <!-- Converters -->
        <converters:ArgbColorToBrushMultiConverter x:Key="ArgbColorToBrushMultiConverter"/>
        <converters:DataMultiValueConverter x:Key="DataMultiValueConverter"/>
        <converters:EditorToStatsMultiConverter x:Key="EditorToStatsMultiConverter"/>
        <converters:EditorToTitleMultiConverter x:Key="EditorToTitleMultiConverter"/>
        <converters:IsGroupConverter x:Key="IsGroupConverter"/>
        <converters:IsNullConverter x:Key="IsNullConverter"/>
        <converters:ObjectEqualityMultiConverter x:Key="ObjectEqualityMultiConverter"/>
        <converters:ObjectEqualsConverter x:Key="ObjectEqualsConverter"/>
        <converters:ObjectToObjectConverter x:Key="ObjectToObjectConverter"/>
        <converters:ObjectToTypeStringConverter x:Key="ObjectToTypeStringConverter"/>
        <converters:PriorityMultiValueConverter x:Key="PriorityMultiValueConverter"/>
        <converters:StyleMultiValueConverter x:Key="StyleMultiValueConverter"/>
        <converters:TreeViewSelectedItemToObjectConverter x:Key="TreeViewSelectedItemToObjectConverter"/>
    </Application.Resources>
    <Application.Styles>
        <!-- Theme Default -->
        <!--<StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>-->
        <!--<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>-->
        <!-- Theme Fluent -->
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/Accents/FluentLight.xaml"/>
        <!--<StyleInclude Source="avares://Avalonia.Themes.Fluent/Accents/FluentDark.xaml"/>-->
        <!-- DataGrid -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Default.xaml"/>
        <!-- Icons -->
        <StyleInclude Source="avares://Core2D.UI/Icons.xaml"/>
        <!-- Fluent -->
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/DensityStyles/Compact.xaml"/>
    </Application.Styles>
    <Application.DataTemplates>
        <!--<local:ViewLocator/>-->
        <!-- Editor -->
        <DataTemplate DataType="Editor:IProjectEditor">
            <Grid/>
        </DataTemplate>
        <!-- Style -->
        <DataTemplate DataType="StyleCore:IArgbColor">
            <style:ArgbColorControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:IArrowStyle">
            <style:ArrowStyleControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:IFontStyle">
            <style:FontStyleControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:ITextStyle">
            <style:TextStyleControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:ILineFixedLength">
            <style:LineFixedLengthControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:ILineStyle">
            <style:LineStyleControl/>
        </DataTemplate>
        <DataTemplate DataType="StyleCore:IShapeStyle">
            <style:ShapeStyleControl/>
        </DataTemplate>
        <!-- Data -->
        <DataTemplate DataType="DataCore:IRecord">
            <data:RecordControl/>
        </DataTemplate>
        <DataTemplate DataType="DataCore:IDatabase">
            <data:DatabaseControl/>
        </DataTemplate>
        <DataTemplate DataType="DataCore:IContext">
            <data:DataControl/>
        </DataTemplate>
        <!-- Renderer -->
        <DataTemplate DataType="RendererCore:IShapeState">
            <renderer:ShapeStateControl/>
        </DataTemplate>
        <!-- Settings Tools -->
        <DataTemplate DataType="SettingsTools:ToolSettingsArc">
            <settingsTools:ArcSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsCubicBezier">
            <settingsTools:CubicBezierSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsEllipse">
            <settingsTools:EllipseSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsImage">
            <settingsTools:ImageSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsLine">
            <settingsTools:LineSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsNone">
            <settingsTools:NoneSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsPath">
            <settingsTools:PathSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsPoint">
            <settingsTools:PointSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsQuadraticBezier">
            <settingsTools:QuadraticBezierSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsRectangle">
            <settingsTools:RectangleSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsSelection">
            <settingsTools:SelectionSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsTools:ToolSettingsText">
            <settingsTools:TextSettingsControl/>
        </DataTemplate>
        <!-- Settings Path -->
        <DataTemplate DataType="SettingsPath:PathToolSettingsArc">
            <settingsPath:ArcSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsPath:PathToolSettingsCubicBezier">
            <settingsPath:CubicBezierSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsPath:PathToolSettingsLine">
            <settingsPath:LineSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsPath:PathToolSettingsMove">
            <settingsPath:MoveSettingsControl/>
        </DataTemplate>
        <DataTemplate DataType="SettingsPath:PathToolSettingsQuadraticBezier">
            <settingsPath:QuadraticBezierSettingsControl/>
        </DataTemplate>
        <!-- Shapes -->
        <DataTemplate DataType="ShapesCore:IPointShape">
            <shapes:PointControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:ILineShape">
            <shapes:LineControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IRectangleShape">
            <shapes:RectangleControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IEllipseShape">
            <shapes:EllipseControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IImageShape">
            <shapes:ImageControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:ITextShape">
            <shapes:TextControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IArcShape">
            <shapes:ArcControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:ICubicBezierShape">
            <shapes:CubicBezierControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IQuadraticBezierShape">
            <shapes:QuadraticBezierControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IGroupShape">
            <shapes:GroupControl/>
        </DataTemplate>
        <DataTemplate DataType="ShapesCore:IPathShape">
            <shapes:PathControl/>
        </DataTemplate>
        <!-- Path -->
        <DataTemplate DataType="PathCore:IPathSize">
            <path:PathSizeControl/>
        </DataTemplate>
        <DataTemplate DataType="PathCore:IPathFigure">
            <path:PathFigureControl/>
        </DataTemplate>
        <DataTemplate DataType="PathCore:IPathGeometry">
            <path:PathGeometryControl/>
        </DataTemplate>
        <!-- Segments -->
        <DataTemplate DataType="SegmentsCore:IArcSegment">
            <path:ArcSegmentControl/>
        </DataTemplate>
        <DataTemplate DataType="SegmentsCore:ICubicBezierSegment">
            <path:CubicBezierSegmentControl/>
        </DataTemplate>
        <DataTemplate DataType="SegmentsCore:ILineSegment">
            <path:LineSegmentControl/>
        </DataTemplate>
        <DataTemplate DataType="SegmentsCore:IQuadraticBezierSegment">
            <path:QuadraticBezierSegmentControl/>
        </DataTemplate>
        <!-- Containers -->
        <DataTemplate DataType="ContainersCore:ILibrary">
            <containers:LibraryControl/>
        </DataTemplate>
        <DataTemplate DataType="ContainersCore:IOptions">
            <containers:OptionsControl/>
        </DataTemplate>
        <DataTemplate DataType="ContainersCore:IProjectContainer">
            <containers:ProjectControl/>
        </DataTemplate>
        <DataTemplate DataType="ContainersCore:IDocumentContainer">
            <containers:DocumentControl/>
        </DataTemplate>
        <DataTemplate DataType="ContainersCore:IPageContainer">
            <containers:ContainerControl/>
        </DataTemplate>
        <DataTemplate DataType="ContainersCore:ILayerContainer">
            <containers:LayerControl/>
        </DataTemplate>
        <!-- Scripting -->
        <DataTemplate DataType="ScriptingCore:IScript">
            <scripting:ScriptControl/>
        </DataTemplate>
    </Application.DataTemplates>
</Application>
