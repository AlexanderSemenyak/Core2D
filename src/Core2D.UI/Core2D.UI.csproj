<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Library</OutputType>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
    <LangVersion>8.0</LangVersion>
    <IsPackable>False</IsPackable>
    <Nullable>disable</Nullable>
    <NoWarn>$(NoWarn);NU1701</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <VersionPrefix>0.10.0</VersionPrefix>
    <VersionSuffix>preview1</VersionSuffix>
    <Authors>Wiesław Šoltés</Authors>
    <Company>Wiesław Šoltés</Company>
    <Description>A multi-platform data driven 2D diagram editor.</Description>
    <Copyright>Copyright © Wiesław Šoltés 2020</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <PropertyGroup>
    <!--<DefineConstants>$(DefineConstants);USE_DIAGNOSTICS</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_SKIA</DefineConstants>-->
    <!--<DefineConstants>$(DefineConstants);USE_SKIA_RTB</DefineConstants>-->
  </PropertyGroup>

  <PropertyGroup>
    <AvaloniaVersion>0.10.0-preview1</AvaloniaVersion>
    <AvaloniaBehaviorsVersion>0.10.0-preview1</AvaloniaBehaviorsVersion>
    <PanAndZoomVersion>3.0.0-preview1</PanAndZoomVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.7.1" />
    <PackageReference Include="reactiveui" Version="11.4.1" />
    <PackageReference Include="Avalonia.Xaml.Interactions" Version="$(AvaloniaBehaviorsVersion)" />
    <PackageReference Include="Avalonia.Xaml.Interactions.Custom" Version="$(AvaloniaBehaviorsVersion)" />
    <PackageReference Include="Avalonia.MatrixExtensions" Version="$(PanAndZoomVersion)" />
    <PackageReference Include="Avalonia.Controls.PanAndZoom" Version="$(PanAndZoomVersion)" />
    <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Desktop" Version="$(AvaloniaVersion)" />
    <PackageReference Include="Avalonia.Diagnostics" Version="$(AvaloniaVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core2D\Core2D.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\Editor\Tools\Path\Settings\PathToolSettingsMoveControl.xaml.cs">
      <DependentUpon>PathToolSettingsMoveControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Path\Settings\PathToolSettingsLineControl.xaml.cs">
      <DependentUpon>PathToolSettingsLineControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Path\Settings\PathToolSettingsCubicBezierControl.xaml.cs">
      <DependentUpon>PathToolSettingsCubicBezierControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Path\Settings\PathToolSettingsArcControl.xaml.cs">
      <DependentUpon>PathToolSettingsArcControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Path\Settings\PathToolSettingsQuadraticBezierControl.xaml.cs">
      <DependentUpon>PathToolSettingsQuadraticBezierControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Settings\ToolSettingsTextControl.xaml.cs">
      <DependentUpon>ToolSettingsTextControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Settings\ToolSettingsSelectionControl.xaml.cs">
      <DependentUpon>ToolSettingsSelectionControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Editor\Tools\Settings\ToolSettingsRectangleControl.xaml.cs">
