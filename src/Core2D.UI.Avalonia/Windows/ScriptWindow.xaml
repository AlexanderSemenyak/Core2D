<idc:MetroWindow x:Class="Core2D.UI.Avalonia.Windows.ScriptWindow"
                 xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
                 xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
                 xmlns:id="clr-namespace:Dock.Avalonia;assembly=Core2D.UI.Avalonia"
                 xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
                 xmlns:converters="clr-namespace:Core2D.UI.Avalonia.Converters;assembly=Core2D.UI.Avalonia"
                 xmlns:views="clr-namespace:Core2D.UI.Avalonia.Views;assembly=Core2D.UI.Avalonia"
                 Width="700" Height="340"
                 UseLayoutRounding="True" RenderOptions.BitmapInterpolationMode="HighQuality"
                 WindowState="Normal" WindowStartupLocation="CenterScreen"
                 BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderLightBrush}"
                 Foreground="{DynamicResource ThemeForegroundBrush}"
                 Title="Script Editor"
                 xmlns:Designer="clr-namespace:Core2D.Editor.Designer;assembly=Core2D.Editor"
                 mc:Ignorable="d"
                 d:DataContext="{x:Static Designer:DesignerContext.Editor}"
                 d:DesignWidth="1000" d:DesignHeight="600">
    <views:ScriptControl/>
</idc:MetroWindow>
