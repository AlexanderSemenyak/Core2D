<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentDark.xaml" />
    <StyleInclude Source="avares://Avalonia.Themes.Fluent/DensityStyles/Compact.xaml" />
    <Style>
        <Style.Resources>
            <Color x:Key="SystemChromeMediumLowColor">Transparent</Color>
            <SolidColorBrush x:Key="SystemControlBackgroundChromeMediumLowBrush" Color="{StaticResource SystemChromeMediumLowColor}" />
            <Color x:Key="SystemAltMediumLowColor">Transparent</Color>
            <SolidColorBrush x:Key="SystemControlBackgroundAltMediumLowBrush" Color="{StaticResource SystemAltMediumLowColor}" />
            <StaticResource x:Key="TextControlBackground" ResourceKey="SystemControlBackgroundAltMediumLowBrush" />
            <SolidColorBrush x:Key="AcrylicFallbackColor">#1F1F1F</SolidColorBrush>
            <SolidColorBrush x:Key="IconTransparentBrush" Color="#00000000" />
            <SolidColorBrush x:Key="IconAccentBrush1" Color="#FFA0A0A0" />
            <SolidColorBrush x:Key="IconAccentBrush2" Color="#80A0A0A0" />
            <GridLength x:Key="SliderPreContentMargin">3</GridLength>
            <GridLength x:Key="SliderPostContentMargin">3</GridLength>
            <SolidColorBrush x:Key="DialogOverlayColor">#7F2E2E2E</SolidColorBrush>
            <SolidColorBrush x:Key="DialogBackground">#323232</SolidColorBrush>
            <BoxShadows x:Key="DialogBoxShadow">4 11 30 1 #3F000000</BoxShadows>
            <Thickness x:Key="MainViewMargin">0,40,0,0</Thickness>
            <x:Double x:Key="MenuBarHeight">40</x:Double>
            <Thickness x:Key="MenuBarItemPadding">12,0,12,0</Thickness>
            <CornerRadius x:Key="OverlayCornerRadius">0</CornerRadius>
        </Style.Resources>
    </Style>
    <Style Selector="Expander /template/ ToggleButton#PART_toggle">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>
    <Style Selector="Expander /template/ ToggleButton#PART_toggle:pointerover /template/ Border">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightBaseMediumBrush}" />
    </Style>
    <Style Selector="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="0,0,0,0" />
    </Style>
    <Style Selector="ListBoxItem TextBlock">
        <Setter Property="Padding" Value="12,9,12,12" />
    </Style>
    <Style Selector="TabControl">
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Padding" Value="0,0,0,0" />
    </Style>
    <Style Selector="TabItem">
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="6,0,6,0" />
    </Style>
    <Style Selector="TreeView">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
    </Style>
    <Style Selector="DataGrid">
        <Style.Resources>
            <x:Double x:Key="ScrollBarThickness">16</x:Double>
        </Style.Resources>
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource SystemChromeMediumColor}" />
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource SystemChromeMediumColor}" />
    </Style>
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Setter Property="SeparatorBrush" Value="{DynamicResource SystemChromeMediumColor}" />
    </Style>
    <Style Selector="DataGridRow /template/ Rectangle#BackgroundRectangle">
        <Setter Property="Fill" Value="{DynamicResource SystemControlHighlightListAccentLowBrush}" />
    </Style>
    <Style Selector="DataGridRow:selected">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlHighlightAltBaseHighBrush}" />
    </Style>
</Styles>
