<UserControl x:Class="Core2D.Views.Shapes.LineShapeControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Core2D.Converters;assembly=Core2D"
             xmlns:Shapes="clr-namespace:Core2D.Shapes;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Line}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="Shapes:LineShape" x:CompileBindings="True">
    <StackPanel>
        <Expander Header="Line" IsExpanded="True">
            <StackPanel>
                <Label Content="Name" Margin="{DynamicResource TextControlThemePadding}" />
                <TextBox Text="{Binding Name, Mode=TwoWay}" />
                <CheckBox Content="IsStroked" IsChecked="{Binding IsStroked, Mode=TwoWay}" HorizontalAlignment="Stretch" />
            </StackPanel>
        </Expander>
        <Expander Header="Start" IsExpanded="False">
            <ContentControl Content="{Binding Start}" />
        </Expander>
        <Expander Header="End" IsExpanded="False">
            <ContentControl Content="{Binding End}" />
        </Expander>
        <Expander Header="Data" IsExpanded="False">
            <ContentControl Content="{Binding Data}" />
        </Expander>
        <Expander Header="Style" IsExpanded="False">
            <ContentControl Content="{Binding Style}" />
        </Expander>
        <Expander Header="State" IsExpanded="False">
            <ContentControl Content="{Binding State}" />
        </Expander>
    </StackPanel>>
</UserControl>
