<UserControl x:Class="Core2D.Views.BrowserView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:idd="clr-namespace:Core2D.DragAndDrop;assembly=Core2D"
             xmlns:converters="clr-namespace:Core2D.Converters;assembly=Core2D"
             xmlns:vm="clr-namespace:Core2D;assembly=Core2D"
             xmlns:vmdt="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:vme="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:vmc="clr-namespace:Core2D.Containers;assembly=Core2D"
             xmlns:vms="clr-namespace:Core2D.Shapes;assembly=Core2D"
             xmlns:vmst="clr-namespace:Core2D.Style;assembly=Core2D"
             xmlns:vmd="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.Editor}"
             d:DesignWidth="1000" d:DesignHeight="600"
             x:DataType="vme:ProjectEditor" x:CompileBindings="True">
    <UserControl.Resources>
        <converters:ObjectToTypeStringConverter x:Key="ObjectToTypeStringConverter" />
    </UserControl.Resources>
    <TreeView x:Name="project">
        <TreeView.KeyBindings>
            <KeyBinding Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding #project.SelectedItem}" Gesture="Ctrl+E" x:CompileBindings="False" />
        </TreeView.KeyBindings>
        <TreeViewItem Header="{Binding Name}" DataContext="{Binding Project}" IsExpanded="True">
            <TreeViewItem.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" x:CompileBindings="False" />
                </ContextMenu>
            </TreeViewItem.ContextMenu>
            <TreeViewItem Header="Styles" DataContext="{Binding StyleLibraries}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <TreeDataTemplate DataType="vmc:Library" ItemsSource="{Binding Items}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <DataTemplate DataType="vmst:ShapeStyle">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
            <TreeViewItem Header="Groups" DataContext="{Binding GroupLibraries}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <TreeDataTemplate DataType="vmc:Library" ItemsSource="{Binding Items}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vms:GroupShape" ItemsSource="{Binding Resources}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <DataTemplate DataType="vm:ViewModelBase">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
            <TreeViewItem Header="Databases" DataContext="{Binding Databases}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <DataTemplate DataType="vmdt:Database">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
            <TreeViewItem Header="Templates" DataContext="{Binding Templates}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <TreeDataTemplate DataType="vmc:PageContainer" ItemsSource="{Binding Layers}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vmc:LayerContainer" ItemsSource="{Binding Shapes}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vms:BaseShape" ItemsSource="{Binding Resources}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <DataTemplate DataType="vm:ViewModelBase">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
            <TreeViewItem Header="Scripts" DataContext="{Binding Scripts}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <DataTemplate DataType="vm:ViewModelBase">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
            <TreeViewItem Header="Documents" DataContext="{Binding Documents}" Items="{Binding}">
                <TreeViewItem.ContextMenu>
                    <ContextMenu x:CompileBindings="False">
                        <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                    </ContextMenu>
                </TreeViewItem.ContextMenu>
                <TreeViewItem.Styles>
                    <Style Selector="TreeViewItem">
                        <Setter Property="IsExpanded" Value="False" />
                    </Style>
                </TreeViewItem.Styles>
                <TreeViewItem.DataTemplates>
                    <TreeDataTemplate DataType="vmc:DocumentContainer" ItemsSource="{Binding Pages}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vmc:PageContainer" ItemsSource="{Binding Layers}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vmc:LayerContainer" ItemsSource="{Binding Shapes}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <TreeDataTemplate DataType="vms:BaseShape" ItemsSource="{Binding Resources}" x:CompileBindings="False">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </TreeDataTemplate>
                    <DataTemplate DataType="vm:ViewModelBase">
                        <TextBlock Text="{Binding Mode=OneWay, Converter={StaticResource ObjectToTypeStringConverter}}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                            <TextBlock.ContextMenu>
                                <ContextMenu x:CompileBindings="False">
                                    <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}" CommandParameter="{Binding}" />
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </DataTemplate>
                </TreeViewItem.DataTemplates>
            </TreeViewItem>
        </TreeViewItem>
    </TreeView>
</UserControl>
