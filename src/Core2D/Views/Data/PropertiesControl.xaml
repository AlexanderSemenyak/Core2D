<UserControl x:Class="Core2D.Views.Data.PropertiesControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:idd="clr-namespace:Core2D.DragAndDrop;assembly=Core2D"
             xmlns:converters="clr-namespace:Core2D.Converters;assembly=Core2D"
             xmlns:Data="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Data}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="Data:Context" x:CompileBindings="True">
    <DockPanel>
        <Menu HorizontalAlignment="Right" DockPanel.Dock="Top">
            <MenuItem Header="+" Command="{Binding $parent[TopLevel].DataContext.OnAddProperty}" CommandParameter="{Binding}" x:CompileBindings="False"/>
        </Menu>
        <Grid RowDefinitions="Auto,*" ColumnDefinitions="50*,Auto,50*" IsVisible="{Binding !!Properties.Length}">
            <Label Content="Name" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
            <ItemsControl VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1" Items="{Binding Properties}">
                <ItemsControl.DataTemplates>
                    <DataTemplate DataType="Data:Property">
                        <Panel VerticalAlignment="Top" Background="Transparent" Margin="0,2,0,2">
                            <!--<i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}"/>
                            </i:Interaction.Behaviors>-->
                            <TextBox VerticalAlignment="Center" Text="{Binding Name, Mode=TwoWay}"/>
                        </Panel>
                    </DataTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>
            <GridSplitter ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Background="Transparent" Width="6" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
            <Label Content="Value" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"/>
            <ItemsControl VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="1" Items="{Binding Properties}">
                <ItemsControl.DataTemplates>
                    <DataTemplate DataType="Data:Property">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="Transparent" Margin="0,2,0,2">
                            <!--<i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}"/>
                            </i:Interaction.Behaviors>-->
                            <TextBox Text="{Binding Value, Mode=TwoWay}"/>
                            <Button Content="-" Grid.Column="1" Command="{Binding $parent[TopLevel].DataContext.OnRemoveProperty}" CommandParameter="{Binding}" Padding="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="6,0,0,0" Width="30" x:CompileBindings="False"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.DataTemplates>
            </ItemsControl>
        </Grid>
    </DockPanel>
</UserControl>
