<UserControl x:Class="Core2D.Views.Data.RecordView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vmdt="using:Core2D.ViewModels.Data"
             xmlns:vmd="using:Core2D.ViewModels.Designer"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.Record}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="vmdt:RecordViewModel" x:CompileBindings="True">
  <Grid RowDefinitions="Auto,*" ColumnDefinitions="50*,Auto,50*">
    <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Name" />
    <ItemsControl VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1" DataContext="{Binding Owner}"
                  Items="{Binding Columns}" x:DataType="vmdt:DatabaseViewModel">
      <ItemsControl.DataTemplates>
        <DataTemplate DataType="vmdt:ColumnViewModel">
          <Grid VerticalAlignment="Top" Background="Transparent" Margin="0,2,0,2">
            <!--<i:Interaction.Behaviors>
                            <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                        </i:Interaction.Behaviors>-->
            <TextBox VerticalAlignment="Center" Text="{Binding Name, Mode=TwoWay}" />
          </Grid>
        </DataTemplate>
      </ItemsControl.DataTemplates>
    </ItemsControl>
    <GridSplitter ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Background="Transparent" Width="6"
                  Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" />
    <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="Value" />
    <ItemsControl VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="1" Items="{Binding Values}">
      <ItemsControl.DataTemplates>
        <DataTemplate DataType="vmdt:ValueViewModel">
          <Grid VerticalAlignment="Top" Background="Transparent" Margin="0,2,0,2">
            <!--<i:Interaction.Behaviors>
                            <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                        </i:Interaction.Behaviors>-->
            <TextBox VerticalAlignment="Center" Text="{Binding Content, Mode=TwoWay}" />
          </Grid>
        </DataTemplate>
      </ItemsControl.DataTemplates>
    </ItemsControl>
  </Grid>
</UserControl>
