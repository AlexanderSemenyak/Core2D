<UserControl x:Class="Core2D.Views.Data.ContextView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Core2D.Converters;assembly=Core2D"
             xmlns:data="clr-namespace:Core2D.Views.Data;assembly=Core2D"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:Data="clr-namespace:Core2D.Data;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.Data}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="Data:Context" x:CompileBindings="True">
    <StackPanel>
        <Expander Header="Record" IsExpanded="True">
            <DockPanel IsVisible="{Binding !!Record}">
                <Menu HorizontalAlignment="Right" IsVisible="{Binding !!Record}" DockPanel.Dock="Top">
                    <MenuItem Header="&#727;" Command="{Binding $parent[TopLevel].DataContext.OnResetRecord}" CommandParameter="{Binding}" IsVisible="{Binding !!Record}" x:CompileBindings="False"/>
                </Menu>
                <ContentControl Content="{Binding Record}"/>
            </DockPanel>
        </Expander>
        <Expander Header="Properties" IsExpanded="True">
            <data:PropertiesView/>
        </Expander>
    </StackPanel>
</UserControl>
