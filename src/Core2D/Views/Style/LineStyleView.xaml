<UserControl x:Class="Core2D.Views.Style.LineStyleView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Core2D.Converters;assembly=Core2D"
             xmlns:Style="clr-namespace:Core2D.Style;assembly=Core2D"
             xmlns:Editor="clr-namespace:Core2D.Editor;assembly=Core2D"
             xmlns:Designer="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static Designer:DesignerContext.LineStyle}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="Style:LineStyle" x:CompileBindings="True">
    <StackPanel>
        <StackPanel>
            <Label Content="Name" Margin="{DynamicResource TextControlThemePadding}" />
            <TextBox Text="{Binding Name, Mode=TwoWay}" />
            <CheckBox Content="IsCurved" IsChecked="{Binding IsCurved, Mode=TwoWay}" HorizontalAlignment="Stretch" />
            <Label Content="Curvature" Margin="{DynamicResource TextControlThemePadding}" />
            <TextBox Text="{Binding Curvature, Mode=TwoWay}" />
            <Label Content="CurveOrientation" Margin="{DynamicResource TextControlThemePadding}" />
            <ComboBox Items="{x:Static Editor:Enums.CurveOrientationValues}" SelectedItem="{Binding CurveOrientation, Mode=TwoWay}" HorizontalAlignment="Stretch" />
        </StackPanel>
        <Expander Header="FixedLength" IsExpanded="False">
            <ContentControl Content="{Binding FixedLength}" />
        </Expander>
    </StackPanel>
</UserControl>
