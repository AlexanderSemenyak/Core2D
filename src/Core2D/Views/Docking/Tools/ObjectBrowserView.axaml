<UserControl x:Class="Core2D.Views.Docking.Tools.ObjectBrowserView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:idd="using:Avalonia.Xaml.Interactions.DragAndDrop"
             xmlns:converters="using:Core2D.Converters"
             xmlns:vm="using:Core2D.ViewModels.Docking.Tools"
             xmlns:core="using:Core2D.ViewModels"
             xmlns:vmdt="using:Core2D.ViewModels.Data"
             xmlns:vme="using:Core2D.ViewModels.Editor"
             xmlns:vmc="using:Core2D.ViewModels.Containers"
             xmlns:vms="using:Core2D.ViewModels.Shapes"
             xmlns:vmst="using:Core2D.ViewModels.Style"
             xmlns:vmd="using:Core2D.ViewModels.Designer"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"
             x:DataType="vm:ObjectBrowserViewModel" x:CompileBindings="True">
  <UserControl.Resources>
    <ContextMenu x:Key="ExportContextMenu" x:CompileBindings="False">
      <MenuItem Header="E_xport" 
                Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}"
                CommandParameter="{Binding}" />
    </ContextMenu>
  </UserControl.Resources>
  <Panel DataContext="{Binding Context}">
    <Panel d:DataContext="{x:Static vmd:DesignerContext.Editor}" 
           x:DataType="vme:ProjectEditorViewModel">
      <TreeView x:Name="ProjectTreeView">
        <TreeView.KeyBindings>
          <KeyBinding Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}"
                      CommandParameter="{Binding #ProjectTreeView.SelectedItem}" Gesture="Ctrl+E" x:CompileBindings="False" />
        </TreeView.KeyBindings>
        <TreeViewItem Header="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding Project}" IsExpanded="True">
          <TreeViewItem Header="Styles" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding StyleLibraries}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <DataTemplate DataType="vmst:ShapeStyleViewModel">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
          <TreeViewItem Header="Groups" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding GroupLibraries}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <TreeDataTemplate DataType="vms:GroupShapeViewModel" ItemsSource="{Binding Resources}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <DataTemplate DataType="core:ViewModelBase">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
          <TreeViewItem Header="Databases" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding Databases}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <DataTemplate DataType="vmdt:DatabaseViewModel">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
          <TreeViewItem Header="Templates" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding Templates}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <TreeDataTemplate DataType="vmc:PageContainerViewModel" ItemsSource="{Binding Layers}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <TreeDataTemplate DataType="vmc:LayerContainerViewModel" ItemsSource="{Binding Shapes}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <TreeDataTemplate DataType="vms:BaseShapeViewModel" ItemsSource="{Binding Resources}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <DataTemplate DataType="core:ViewModelBase">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
          <TreeViewItem Header="Scripts" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding Scripts}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <DataTemplate DataType="core:ViewModelBase">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
          <TreeViewItem Header="Documents" ContextMenu="{StaticResource ExportContextMenu}" DataContext="{Binding Documents}" Items="{Binding}">
            <TreeViewItem.Styles>
              <Style Selector="TreeViewItem">
                <Setter Property="IsExpanded" Value="False" />
              </Style>
            </TreeViewItem.Styles>
            <TreeViewItem.DataTemplates>
              <TreeDataTemplate DataType="vmc:DocumentContainerViewModel" ItemsSource="{Binding Pages}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <TreeDataTemplate DataType="vmc:PageContainerViewModel" ItemsSource="{Binding Layers}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <TreeDataTemplate DataType="vmc:LayerContainerViewModel" ItemsSource="{Binding Shapes}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Name}" ContextMenu="{StaticResource ExportContextMenu}" Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <TreeDataTemplate DataType="vms:BaseShapeViewModel" ItemsSource="{Binding Resources}"
                                x:CompileBindings="False">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </TreeDataTemplate>
              <DataTemplate DataType="core:ViewModelBase">
                <TextBlock Text="{Binding Mode=OneWay, Converter={x:Static converters:ViewModelToTypeStringConverter.Instance}}"
                           ContextMenu="{StaticResource ExportContextMenu}"
                           Background="Transparent">
                  <i:Interaction.Behaviors>
                    <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                  </i:Interaction.Behaviors>
                </TextBlock>
              </DataTemplate>
            </TreeViewItem.DataTemplates>
          </TreeViewItem>
        </TreeViewItem>
      </TreeView>
    </Panel>
  </Panel>
</UserControl>
