<UserControl x:Class="Core2D.Views.Path.Segments.CubicBezierSegmentView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vmps="using:Core2D.Path.Segments"
             xmlns:vmd="using:Core2D.Designer"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.CubicBezierSegment}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="vmps:CubicBezierSegment" x:CompileBindings="True">
    <StackPanel>
        <Expander Header="Point1" IsExpanded="False">
            <ContentControl Content="{Binding Point1}" />
        </Expander>
        <Expander Header="Point2" IsExpanded="False">
            <ContentControl Content="{Binding Point2}" />
        </Expander>
        <Expander Header="Point3" IsExpanded="False">
            <ContentControl Content="{Binding Point3}" />
        </Expander>
    </StackPanel>
</UserControl>
