<UserControl x:Class="Core2D.Views.Containers.DocumentContainerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:idd="clr-namespace:Core2D.DragAndDrop;assembly=Core2D"
             xmlns:vmc="clr-namespace:Core2D.Containers;assembly=Core2D"
             xmlns:vmd="clr-namespace:Core2D.Designer;assembly=Core2D"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.Document}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="vmc:DocumentContainer" x:CompileBindings="True">
    <StackPanel>
        <StackPanel>
            <Label Content="Name" Margin="{DynamicResource TextControlThemePadding}" />
            <TextBox Text="{Binding Name, Mode=TwoWay}" />
        </StackPanel>
        <Expander Header="Pages" IsExpanded="False">
            <ListBox x:Name="pages" Items="{Binding Pages}">
                <ListBox.DataTemplates>
                    <DataTemplate DataType="vmc:PageContainer">
                        <TextBlock Text="{Binding Name}" Background="Transparent">
                            <i:Interaction.Behaviors>
                                <idd:ContextDragBehavior Context="{Binding FallbackValue={x:Null}}" />
                            </i:Interaction.Behaviors>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.DataTemplates>
            </ListBox>
        </Expander>
        <Expander Header="Selected Page" IsExpanded="False">
            <ContentControl Content="{Binding #pages.SelectedItem}" />
        </Expander>
    </StackPanel>
</UserControl>
