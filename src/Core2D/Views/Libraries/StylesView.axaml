<UserControl x:Class="Core2D.Views.Libraries.StylesView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:idd="using:Avalonia.Xaml.Interactions.DragAndDrop"
             xmlns:dd="using:Core2D.Behaviors.DragAndDrop"
             xmlns:vmc="using:Core2D.ViewModels.Containers"
             xmlns:vms="using:Core2D.ViewModels.Style"
             xmlns:vmd="using:Core2D.ViewModels.Designer"
             xmlns:c="clr-namespace:Core2D.Controls"
             mc:Ignorable="d"
             d:DataContext="{x:Static vmd:DesignerContext.Project}"
             d:DesignWidth="250" d:DesignHeight="400"
             x:DataType="vmc:ProjectContainerViewModel" x:CompileBindings="True">
  <UserControl.Resources>
    <dd:StylesListBoxDropHandler x:Key="StylesListBoxDropHandler" />
  </UserControl.Resources>
  <Grid RowDefinitions="Auto,Auto,Auto,*">
    <Grid RowDefinitions="*" ColumnDefinitions="*,Auto" Margin="{DynamicResource ContentMargin}" Grid.Row="0">
      <TextBox Text="{Binding CurrentStyleLibrary.Name, Mode=TwoWay}" BorderBrush="Transparent"
               Background="Transparent" VerticalAlignment="Center" Margin="0,0,0,0"
               IsVisible="{Binding !!$self.DataContext.CurrentStyleLibrary}" Grid.Column="0" x:CompileBindings="False" />
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                  x:CompileBindings="False">
        <Button Content="&#727;" Command="{Binding $parent[TopLevel].DataContext.OnRemoveStyleLibrary}"
                CommandParameter="{Binding CurrentStyleLibrary}"
                IsVisible="{Binding !!$self.DataContext.CurrentStyleLibrary}" BorderBrush="Transparent"
                Background="Transparent" Padding="12,4,12,4" />
        <Button Content="+" Command="{Binding $parent[TopLevel].DataContext.OnAddStyleLibrary}"
                BorderBrush="Transparent" Background="Transparent" Padding="12,4,12,4" />
      </StackPanel>
    </Grid>
    <ComboBox Items="{Binding StyleLibraries}" SelectedItem="{Binding CurrentStyleLibrary, Mode=TwoWay}" Grid.Row="1"
              IsVisible="{Binding !!$self.DataContext.CurrentStyleLibrary}" HorizontalAlignment="Stretch"
              Margin="{DynamicResource ContentMargin}"
              x:CompileBindings="False">
      <ComboBox.DataTemplates>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ComboBox.DataTemplates>
    </ComboBox>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                IsVisible="{Binding !!$self.DataContext.CurrentStyleLibrary}" 
                Margin="{DynamicResource ContentMargin}"
                x:CompileBindings="False">
      <Button Content="apply" Command="{Binding $parent[TopLevel].DataContext.OnApplyStyle}"
              CommandParameter="{Binding CurrentStyleLibrary.Selected}"
              IsVisible="{Binding !!CurrentStyleLibrary.Selected}" BorderBrush="Transparent" Background="Transparent"
              Padding="12,4,12,4" />
      <Button Content="&#727;" Command="{Binding $parent[TopLevel].DataContext.OnRemoveStyle}"
              CommandParameter="{Binding CurrentStyleLibrary.Selected}"
              IsVisible="{Binding !!CurrentStyleLibrary.Selected}" BorderBrush="Transparent" Background="Transparent"
              Padding="12,4,12,4" />
      <Button Content="+" Command="{Binding $parent[TopLevel].DataContext.OnAddStyle}"
              CommandParameter="{Binding CurrentStyleLibrary}" BorderBrush="Transparent" Background="Transparent"
              Padding="12,4,12,4" />
    </StackPanel>
    <ListBox x:Name="StylesListBox" Items="{Binding CurrentStyleLibrary.Items}"
             SelectedItem="{Binding CurrentStyleLibrary.Selected, Mode=TwoWay}" Grid.Row="3">
      <i:Interaction.Behaviors>
        <idd:ContextDropBehavior Context="{Binding CurrentStyleLibrary, FallbackValue={x:Null}}"
                                 Handler="{StaticResource StylesListBoxDropHandler}" />
      </i:Interaction.Behaviors>
      <ListBox.KeyBindings>
        <KeyBinding Command="{Binding $parent[TopLevel].DataContext.OnAddStyle}"
                    CommandParameter="{Binding #StylesListBox.DataContext, Mode=OneWay}" Gesture="Ctrl+N"
                    x:CompileBindings="False" />
        <KeyBinding Command="{Binding $parent[TopLevel].DataContext.OnRemoveStyle}"
                    CommandParameter="{Binding #StylesListBox.SelectedItem}" Gesture="Delete" x:CompileBindings="False" />
        <KeyBinding Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}"
                    CommandParameter="{Binding #StylesListBox.SelectedItem}" Gesture="Ctrl+E" x:CompileBindings="False" />
      </ListBox.KeyBindings>
      <ListBox.Resources>
        <ContextMenu x:Key="ShapeStyleContextMenu" x:CompileBindings="False">
          <MenuItem Header="_Delete" Command="{Binding $parent[TopLevel].DataContext.OnRemoveStyle}"
                    CommandParameter="{Binding Mode=OneWay}" />
          <Separator />
          <MenuItem Header="E_xport" Command="{Binding $parent[TopLevel].DataContext.Platform.OnExportObject}"
                    CommandParameter="{Binding Mode=OneWay}" />
        </ContextMenu>
      </ListBox.Resources>
      <ListBox.DataTemplates>
        <DataTemplate DataType="vms:ShapeStyleViewModel">
          <c:EditableItem TextBinding="{Binding Name, Mode=TwoWay}" 
                          ContextMenu="{StaticResource ShapeStyleContextMenu}"
                          Padding="0"/>
        </DataTemplate>
      </ListBox.DataTemplates>
    </ListBox>
  </Grid>
</UserControl>
