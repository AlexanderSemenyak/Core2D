<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <OutputType>Library</OutputType>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
  </PropertyGroup>

  <Import Project="..\..\build\Base.props" />
  <Import Project="..\..\build\Rx.props" />
  <Import Project="..\..\build\Avalonia.props" />

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
  </ItemGroup>

  <Import Project="..\..\build\EmbedXaml.props" />

  <ItemGroup>
    <None Remove="Dock\LayoutControl.xaml" />
    <None Remove="Dock\StripControl - Copy.xaml.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dock.Model\Dock.Model.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Dock\StripControl - Copy.xaml.cs">
      <DependentUpon>StripControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Dock\StripControl.xaml.cs">
      <DependentUpon>StripControl.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
