<Window x:Class="Core2D.Avalonia.Dock.DockWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Core2D.Avalonia;assembly=Core2D.Avalonia"
        xmlns:dock="clr-namespace:Core2D.Avalonia.Dock;assembly=Core2D.Avalonia"
        Width="300" Height="500"
        UseLayoutRounding="True"
        WindowState="Normal"
        Title="Dock">
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <dock:ViewsControl DataContext="{Binding Layout.Panels[0]}" Grid.Column="{Binding Column}" Grid.Row="{Binding Row}"/>
    </Grid>
</Window>
