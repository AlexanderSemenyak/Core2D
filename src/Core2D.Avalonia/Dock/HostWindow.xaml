<Window x:Class="Core2D.Avalonia.Dock.HostWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
        xmlns:id="clr-namespace:Dock.Avalonia;assembly=Dock.Avalonia"
        xmlns:dock="clr-namespace:Core2D.Avalonia.Dock;assembly=Core2D.Avalonia"
        xmlns:handlers="clr-namespace:Core2D.Avalonia.Dock.Handlers;assembly=Core2D.Avalonia"
        Width="300" Height="400"
        UseLayoutRounding="True"
        WindowState="Normal"
        Title="{Binding #dock.DataContext.CurrentView.Title, FallbackValue=Dock}">
    <i:Interaction.Behaviors>
        <id:DropBehavior Context="{Binding}" Handler="{x:Static handlers:DockDropHandler.Instance}"/>
    </i:Interaction.Behaviors>
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <dock:DockControl x:Name="dock" Grid.Column="{Binding Column}" Grid.Row="{Binding Row}"/>
    </Grid>
</Window>
