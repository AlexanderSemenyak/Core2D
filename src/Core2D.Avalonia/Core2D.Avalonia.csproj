<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.1</TargetFrameworks>
    <OutputType>Library</OutputType>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
  </PropertyGroup>

  <Import Project="..\..\build.targets" />

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
        <DependentUpon>%(Filename)</DependentUpon>
        <SubType>Code</SubType>
    </Compile>
    <EmbeddedResource Include="**\*.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.4.0" />
    <PackageReference Include="Avalonia" Version="0.4.1-build2842-alpha" />
    <PackageReference Include="Avalonia.Controls.PanAndZoom" Version="0.4.1-build85-alpha" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="0.4.1-build371-alpha" />
    <PackageReference Include="Serilog" Version="2.4.0" />
    <PackageReference Include="Splat" Version="2.0.0" />
    <PackageReference Include="Sprache" Version="2.1.0" />
    <PackageReference Include="System.Collections.Immutable" Version="1.3.1" />
    <PackageReference Include="System.Reactive" Version="3.0.0" />
    <PackageReference Include="System.Reactive.Core" Version="3.0.0" />
    <PackageReference Include="System.Reactive.Interfaces" Version="3.0.0" />
    <PackageReference Include="System.Reactive.Linq" Version="3.0.0" />
    <PackageReference Include="System.Reactive.PlatformServices" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core2D.Spatial\Core2D.Spatial.csproj" />
    <ProjectReference Include="..\Core2D\Core2D.csproj" />
    <ProjectReference Include="..\Renderer.Avalonia\Renderer.Avalonia.csproj" />
    <ProjectReference Include="..\Utilities.Avalonia\Utilities.Avalonia.csproj" />
  </ItemGroup>

</Project>
