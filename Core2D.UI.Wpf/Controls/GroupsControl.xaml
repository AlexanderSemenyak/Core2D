<UserControl x:Class="Core2D.UI.Wpf.Controls.GroupsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:Core2D;assembly=Core2D"
             xmlns:controls="clr-namespace:Core2D.UI.Wpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid>
        <Grid.Resources>
            <ControlTemplate x:Key="GroupLibrariesMenu">
                <Menu Background="Transparent" HorizontalAlignment="Right">
                    <MenuItem Header="import">
                        <MenuItem Header="Gr_oup Library..." Command="{x:Static core:Commands.ImportGroupLibraryCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
                        <MenuItem Header="Gro_up Libraries..." Command="{x:Static core:Commands.ImportGroupLibrariesCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
                    </MenuItem>
                    <MenuItem Header="export">
                        <MenuItem Header="Gr_oup Library..." Command="{x:Static core:Commands.ExportGroupLibraryCommand}" CommandParameter="{Binding Editor.Project.CurrentGroupLibrary}" InputGestureText=""/>
                        <MenuItem Header="Gro_up Libraries..." Command="{x:Static core:Commands.ExportGroupLibrariesCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
                    </MenuItem>
                    <MenuItem Command="{x:Static core:Commands.AddGroupLibraryCommand}" Header="+"/>
                    <MenuItem Command="{x:Static core:Commands.RemoveGroupLibraryCommand}" Header="-"/>
                </Menu>
            </ControlTemplate>
            <ControlTemplate x:Key="GroupsMenu">
                <Menu Background="Transparent" HorizontalAlignment="Right">
                    <MenuItem Header="import">
                        <MenuItem Header="_Group..." Command="{x:Static core:Commands.ImportGroupCommand}" CommandParameter="{Binding Editor.Project.CurrentGroupLibrary}" InputGestureText=""/>
                        <MenuItem Header="G_roups..." Command="{x:Static core:Commands.ImportGroupsCommand}" CommandParameter="{Binding Editor.Project.CurrentGroupLibrary}" InputGestureText=""/>
                    </MenuItem>
                    <MenuItem Header="export">
                        <MenuItem Header="_Group..." Command="{x:Static core:Commands.ExportGroupCommand}" CommandParameter="{Binding Editor.Project.CurrentGroupLibrary.CurrentGroup}" InputGestureText=""/>
                        <MenuItem Header="G_roups..." Command="{x:Static core:Commands.ExportGroupsCommand}" CommandParameter="{Binding Editor.Project.CurrentGroupLibrary}" InputGestureText=""/>
                    </MenuItem>
                    <MenuItem Command="{x:Static core:Commands.AddGroupCommand}" Header="+"/>
                    <MenuItem Command="{x:Static core:Commands.RemoveGroupCommand}" Header="-"/>
                </Menu>
            </ControlTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Control Template="{StaticResource GroupLibrariesMenu}" Grid.Row="0" Margin="2,0,2,0"/>
        <ContentControl Content="{Binding Editor.Project.CurrentGroupLibrary}"
                        Grid.Row="1" 
                        Margin="2,0,2,0">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
        <ComboBox ItemsSource="{Binding Editor.Project.GroupLibraries}" 
                  SelectedItem="{Binding Editor.Project.CurrentGroupLibrary}" 
                  Grid.Row="2" 
                  Margin="2,2,2,2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=500}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Control Template="{StaticResource GroupsMenu}" Grid.Row="3" Margin="2,0,2,0"/>
        <controls:XGroupDragAndDropListBox 
            x:Name="groupsListBox"
            DataContext="{Binding Editor.Project.CurrentGroupLibrary.Groups}"
            Tag="{Binding DataContext.Editor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            ItemsSource="{Binding}"
            SelectedItem="{Binding DataContext.Editor.Project.CurrentGroupLibrary.CurrentGroup, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
            BorderBrush="{x:Null}"
            HorizontalContentAlignment="Stretch"
            Grid.Row="4">
            <controls:XGroupDragAndDropListBox.Resources>
                <ContextMenu x:Key="GroupContextMenu" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="_Add Group"
                              InputGestureText="Ctrl+N" 
                              Command="{x:Static core:Commands.AddGroupCommand}"/>
                    <Separator/>
                    <MenuItem Header="_Delete" 
                              InputGestureText="Del" 
                              Command="{x:Static core:Commands.RemoveGroupCommand}"/>
                    <Separator/>
                    <MenuItem Header="E_xport" 
                              InputGestureText="Ctrl+E" 
                              Command="{x:Static core:Commands.ExportGroupCommand}" 
                              CommandParameter="{Binding}"/>
                </ContextMenu>
            </controls:XGroupDragAndDropListBox.Resources>
            <controls:XGroupDragAndDropListBox.InputBindings>
                <KeyBinding Command="{x:Static core:Commands.AddGroupCommand}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:XGroupDragAndDropListBox}}}" 
                            Gesture="Ctrl+N"/>
                <KeyBinding Command="{x:Static core:Commands.RemoveGroupCommand}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:XGroupDragAndDropListBox}}}" 
                            Gesture="Del"/>
                <KeyBinding Command="{x:Static core:Commands.ExportGroupCommand}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:XGroupDragAndDropListBox}}}" 
                            Gesture="Ctrl+E"/>
            </controls:XGroupDragAndDropListBox.InputBindings>
            <controls:XGroupDragAndDropListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="ContextMenu" Value="{StaticResource GroupContextMenu}"/>
                </Style>
            </controls:XGroupDragAndDropListBox.ItemContainerStyle>
            <controls:XGroupDragAndDropListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                </DataTemplate>
            </controls:XGroupDragAndDropListBox.ItemTemplate>
        </controls:XGroupDragAndDropListBox>
    </Grid>
</UserControl>
