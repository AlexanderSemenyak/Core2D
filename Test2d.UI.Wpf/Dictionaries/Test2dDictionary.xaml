                        Grid.Row="1"
                        Grid.Column="0">
                    </TextBlock>
                    <TextBlock 
                        Text="{x:Static p:Resources.OptionsDefaultIsClosed}" 
                        Style="{StaticResource TextBlockLeftStyleKey}"
                        Grid.Row="2"
                        Grid.Column="0">
                    </TextBlock>
                    <TextBlock 
                        Text="{x:Static p:Resources.OptionsDefaultIsSmoothJoin}" 
                        Style="{StaticResource TextBlockLeftStyleKey}"
                        Grid.Row="3"
                        Grid.Column="0">
                    </TextBlock>
                    <TextBlock 
                        Text="{x:Static p:Resources.OptionsDefaultFillRule}" 
