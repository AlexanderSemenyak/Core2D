<XPage xmlns="https://github.com/Core2D" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Name="Page" CurrentLayer="{x:Reference Layer1}">
    <XPage.Template>
        <XTemplate Name="Template" Width="800" Height="600" Background="#FF282828">
            <XTemplate.Layers>
                <XLayer Name="TemplateLayer"/>
            </XTemplate.Layers>
        </XTemplate>
    </XPage.Template>
    <XPage.Layers>
        <XLayer Name="Layer1"/>
        <XLayer Name="Layer2"/>
        <XLayer Name="Layer3"/>
    </XPage.Layers>
    <XPage.WorkingLayer>
        <XLayer Name="Working"/>
    </XPage.WorkingLayer>
    <XPage.HelperLayer>
        <XLayer Name="Helper"/>
    </XPage.HelperLayer>
</XPage>
