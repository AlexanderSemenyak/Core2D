<UserControl x:Class="Test.Controls.ContainerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Test.Controls"
             xmlns:converters="clr-namespace:Test.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="810"
             Width="{Binding Editor.Project.CurrentContainer.Width}" Height="{Binding Editor.Project.CurrentContainer.Height}">
    <UserControl.Resources>
        <converters:ArgbColorToBrushConverter x:Key="ArgbColorToBrushConverter"/>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding Commands.DeleteCommand}" CommandParameter="{Binding}" Key="Delete" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolNoneCommand}" Key="N" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolSelectionCommand}" Key="S" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolPointCommand}" Key="P" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolLineCommand}" Key="L" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolRectangleCommand}" Key="R" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolEllipseCommand}" Key="E" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolArcCommand}" Key="A" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolBezierCommand}" Key="B" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolQBezierCommand}" Key="Q" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolTextCommand}" Key="T" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.ToolImageCommand}" Key="I" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.DefaultIsFilledCommand}" Key="F" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.SnapToGridCommand}" Key="G" Modifiers=""/>
        <KeyBinding Command="{Binding Commands.TryToConnectCommand}" Key="C" Modifiers=""/>
    </UserControl.InputBindings>
    <Grid Width="{Binding Editor.Project.CurrentContainer.Width}" Height="{Binding Editor.Project.CurrentContainer.Height}" Background="Transparent">
        <ItemsControl ItemsSource="{Binding Editor.Project.CurrentContainer.Template.Layers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Width="{Binding Editor.Project.CurrentContainer.Template.Width}" 
                            Height="{Binding Editor.Project.CurrentContainer.Template.Height}" 
                            Background="{Binding Editor.Project.CurrentContainer.Template.Background, Converter={StaticResource ArgbColorToBrushConverter}}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:LayerElement 
                        Renderer="{Binding Path=DataContext.Editor.Renderer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                        Tag="{Binding Path=DataContext.Editor.Project.CurrentContainer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Width" Value="{Binding Path=DataContext.Editor.Project.CurrentContainer.Template.Width, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}, FallbackValue=0.0}" />
                    <Setter Property="Height" Value="{Binding Path=DataContext.Editor.Project.CurrentContainer.Template.Height, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}, FallbackValue=0.0}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        <ItemsControl ItemsSource="{Binding Editor.Project.CurrentContainer.Layers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Width="{Binding Editor.Project.CurrentContainer.Width}" 
                            Height="{Binding Editor.Project.CurrentContainer.Height}" 
                            Background="{Binding Editor.Project.CurrentContainer.Background, Converter={StaticResource ArgbColorToBrushConverter}}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <controls:LayerElement 
                        Renderer="{Binding Path=DataContext.Editor.Renderer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                        Tag="{Binding Path=DataContext.Editor.Project.CurrentContainer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Width" Value="{Binding Path=DataContext.Editor.Project.CurrentContainer.Width, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}, FallbackValue=0.0}" />
                    <Setter Property="Height" Value="{Binding Path=DataContext.Editor.Project.CurrentContainer.Height, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}, FallbackValue=0.0}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>
        <Canvas x:Name="canvas"
                DataContext="{Binding Editor}"
                Background="Transparent"
                Focusable="True"
                FocusVisualStyle="{x:Null}"
                Width="{Binding Project.CurrentContainer.Width}" 
                Height="{Binding Project.CurrentContainer.Height}">
            <controls:LayerElement 
                DataContext="{Binding Project.CurrentContainer.WorkingLayer}" 
                Renderer="{Binding Path=DataContext.Renderer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}}"
                Tag="{Binding Path=DataContext.Project.CurrentContainer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}}"/>
        </Canvas>
    </Grid>
</UserControl>
