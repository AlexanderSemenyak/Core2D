<UserControl x:Class="Test.Controls.StylesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Test.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Test;component/Dictionaries/Test2dDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0" Margin="2,0,2,0">
            <MenuItem Header="import">
                <MenuItem Header="St_yle Group" Command="{Binding Commands.ImportStyleGroupCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
                <MenuItem Header="Sty_le Groups" Command="{Binding Commands.ImportStyleGroupsCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
            </MenuItem>
            <MenuItem Header="export">
                <MenuItem Header="St_yle Group" Command="{Binding Commands.ExportStyleGroupCommand}" CommandParameter="{Binding Editor.Project.CurrentStyleGroup}" InputGestureText=""/>
                <MenuItem Header="Sty_le Groups" Command="{Binding Commands.ExportStyleGroupsCommand}" CommandParameter="{Binding Editor.Project}" InputGestureText=""/>
            </MenuItem>
            <MenuItem Command="{Binding Commands.AddStyleGroupCommand}" Header="+"/>
            <MenuItem Command="{Binding Commands.RemoveStyleGroupCommand}" Header="-"/>
        </Menu>
        <ContentControl Content="{Binding Editor.Project.CurrentStyleGroup}"
                        Grid.Row="1" 
                        Margin="2,0,2,0">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
        <ComboBox ItemsSource="{Binding Editor.Project.StyleGroups}" 
                  SelectedItem="{Binding Editor.Project.CurrentStyleGroup}" 
                  Grid.Row="2" 
                  Margin="2,2,2,2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=500}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="3" Margin="2,0,2,0">
            <MenuItem Header="import">
                <MenuItem Header="_Style" Command="{Binding Commands.ImportStyleCommand}" CommandParameter="{Binding Editor.Project.CurrentStyleGroup}" InputGestureText=""/>
                <MenuItem Header="S_tyles" Command="{Binding Commands.ImportStylesCommand}" CommandParameter="{Binding Editor.Project.CurrentStyleGroup}" InputGestureText=""/>
            </MenuItem>
            <MenuItem Header="export">
                <MenuItem Header="_Style" Command="{Binding Commands.ExportStyleCommand}" CommandParameter="{Binding Editor.Project.CurrentStyleGroup.CurrentStyle}" InputGestureText=""/>
                <MenuItem Header="S_tyles" Command="{Binding Commands.ExportStylesCommand}" CommandParameter="{Binding Editor.Project.CurrentStyleGroup}" InputGestureText=""/>
            </MenuItem>
            <MenuItem Command="{Binding Commands.AddStyleCommand}" Header="_+"/>
            <MenuItem Command="{Binding Commands.RemoveStyleCommand}" Header="_-"/>
        </Menu>
        <controls:ShapeStyleDragAndDropListBox
            DataContext="{Binding Editor.Project.CurrentStyleGroup.Styles}"
            Tag="{Binding DataContext.Editor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
            ItemsSource="{Binding}" 
            SelectedItem="{Binding DataContext.Editor.Project.CurrentStyleGroup.CurrentStyle, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
            BorderBrush="{x:Null}"
            HorizontalContentAlignment="Stretch"
            Grid.Row="4">
            <controls:ShapeStyleDragAndDropListBox.Resources>
                <ContextMenu x:Key="StyleContextMenu" 
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="_Add Style"
                              InputGestureText="Ctrl+N" 
                              Command="{Binding DataContext.Commands.AddStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
                    <Separator/>
                    <MenuItem Header="_Delete" 
                              InputGestureText="Del" 
                              Command="{Binding DataContext.Commands.RemoveStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
                    <Separator/>
                    <MenuItem Header="E_xport" 
                              InputGestureText="Ctrl+E" 
                              Command="{Binding DataContext.Commands.ExportStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                              CommandParameter="{Binding}"/>
                </ContextMenu>
            </controls:ShapeStyleDragAndDropListBox.Resources>
            <controls:ShapeStyleDragAndDropListBox.InputBindings>
                <KeyBinding Command="{Binding DataContext.Commands.AddStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ShapeStyleDragAndDropListBox}}}" 
                            Gesture="Ctrl+N"/>
                <KeyBinding Command="{Binding DataContext.Commands.RemoveStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ShapeStyleDragAndDropListBox}}}" 
                            Gesture="Del"/>
                <KeyBinding Command="{Binding DataContext.Commands.ExportStyleCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" 
                            CommandParameter="{Binding Path=SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:ShapeStyleDragAndDropListBox}}}" 
                            Gesture="Ctrl+E"/>
            </controls:ShapeStyleDragAndDropListBox.InputBindings>
            <controls:ShapeStyleDragAndDropListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="ContextMenu" Value="{StaticResource StyleContextMenu}"/>
                </Style>
            </controls:ShapeStyleDragAndDropListBox.ItemContainerStyle>
            <controls:ShapeStyleDragAndDropListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                </DataTemplate>
            </controls:ShapeStyleDragAndDropListBox.ItemTemplate>
        </controls:ShapeStyleDragAndDropListBox>
        <controls:StyleControl Grid.Row="54" Margin="2" DataContext="{Binding Editor.Project.CurrentStyleGroup.CurrentStyle}">
            <controls:StyleControl.Style>
                <Style TargetType="controls:StyleControl">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </controls:StyleControl.Style>
        </controls:StyleControl>
    </Grid>
</UserControl>
