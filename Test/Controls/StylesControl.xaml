<UserControl x:Class="Test.Controls.StylesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Test.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0">
            <MenuItem Command="{Binding AddStyleCommand}" Header="_+"/>
            <MenuItem Command="{Binding RemoveStyleCommand}" Header="_-"/>
        </Menu>
        <ListBox DataContext="{Binding Editor}"
                 ItemsSource="{Binding Container.Styles}" 
                 SelectedItem="{Binding Container.CurrentStyle}" 
                 BorderBrush="{x:Null}"
                 Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <controls:StyleControl Grid.Row="2" Margin="2"/>
    </Grid>
</UserControl>
