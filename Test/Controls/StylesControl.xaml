<UserControl x:Class="Test.Controls.StylesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Test.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0">
            <MenuItem Command="{Binding Commands.AddStyleCommand}" Header="_+"/>
            <MenuItem Command="{Binding Commands.RemoveStyleCommand}" Header="_-"/>
        </Menu>
        <ComboBox ItemsSource="{Binding Editor.Container.StyleGroups}" 
                  SelectedItem="{Binding Editor.Container.CurrentStyleGroup}" 
                  Grid.Row="1" 
                  Margin="2,2,2,2">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=500}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ListBox DataContext="{Binding Editor}"
                 ItemsSource="{Binding Container.CurrentStyleGroup.Styles}" 
                 SelectedItem="{Binding Container.CurrentStyleGroup.CurrentStyle}" 
                 BorderBrush="{x:Null}"
                 Grid.Row="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <controls:StyleControl Grid.Row="23" Margin="2" DataContext="{Binding Editor.Container.CurrentStyleGroup.CurrentStyle}"/>
    </Grid>
</UserControl>
