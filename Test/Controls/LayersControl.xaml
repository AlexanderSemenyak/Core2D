<UserControl x:Class="Test.Controls.LayersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="180">
    <ListBox ItemsSource="{Binding Container.Layers}" 
             SelectedItem="{Binding Container.CurrentLayer}" 
             BorderBrush="{x:Null}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding IsVisible}" 
                              Margin="0,5,0,5"
                              Content="" 
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              Grid.Column="0"/>
                    <TextBlock Text="{Binding Name}" Margin="0,5,0,5" Grid.Column="1"/>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
