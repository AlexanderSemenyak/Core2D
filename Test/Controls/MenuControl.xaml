<UserControl x:Class="Test.Controls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Menu Background="Transparent">
        <MenuItem Header="_File">
            <MenuItem Header="_New" Command="{Binding NewCommand}" InputGestureText="Ctrl+N"/>
            <Separator/>
            <MenuItem Header="_Open..." Command="{Binding OpenCommand}" InputGestureText="Ctrl+O"/>
            <Separator/>
            <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGestureText="Ctrl+S"/>
            <Separator/>
            <MenuItem Header="_Export..." Command="{Binding ExportCommand}" InputGestureText="Ctrl+E"/>
            <Separator/>
            <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGestureText="Alt+F4"/>
        </MenuItem>
        <MenuItem Header="_Edit">
            <MenuItem Header="_Clear" Command="{Binding ClearCommand}" InputGestureText=""/>
        </MenuItem>
        <MenuItem Header="_Tool">
            <MenuItem Header="_None" Command="{Binding ToolNoneCommand}" InputGestureText="N">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="None">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Line" Command="{Binding ToolLineCommand}" InputGestureText="L">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Line">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="_Rectangle" Command="{Binding ToolRectangleCommand}" InputGestureText="R">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Rectangle">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="_Ellipse" Command="{Binding ToolEllipseCommand}" InputGestureText="E">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Ellipse">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Arc" Command="{Binding ToolArcCommand}" InputGestureText="A">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Arc">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="_Bezier" Command="{Binding ToolBezierCommand}" InputGestureText="B">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Bezier">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <MenuItem Header="_QBezier" Command="{Binding ToolQBezierCommand}" InputGestureText="Q">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="QBezier">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
            <Separator/>
            <MenuItem Header="_Text" Command="{Binding ToolTextCommand}" InputGestureText="T">
                <MenuItem.Style>
                    <Style TargetType="MenuItem">
                        <Setter Property="IsCheckable" Value="True"/>
                        <Setter Property="IsChecked" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentTool}" Value="Text">
                                <Setter Property="IsChecked" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MenuItem.Style>
            </MenuItem>
        </MenuItem>
        <MenuItem Header="_Options">
            <MenuItem Header="Default is _Filled" 
                        IsCheckable="True" 
                        IsChecked="{Binding DefaultIsFilled, Mode=OneWay}"
                        Command="{Binding DefaultIsFilledCommand}" InputGestureText="F"/>
            <Separator/>
            <MenuItem Header="_Snap to Grid" 
                        IsCheckable="True" 
                        IsChecked="{Binding SnapToGrid, Mode=OneWay}"
                        Command="{Binding SnapToGridCommand}" InputGestureText="G"/>
            <Separator/>
            <MenuItem Header="_Draw Points" 
                        IsCheckable="True" 
                        IsChecked="{Binding Renderer.DrawPoints, Mode=OneWay}"
                        Command="{Binding DrawPointsCommand}" InputGestureText=""/>
        </MenuItem>
    </Menu>
</UserControl>
