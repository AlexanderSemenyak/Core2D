<Window x:Class="Test.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Test"
        xmlns:controls="clr-namespace:Test.Controls"
        Title="Test" 
        Height="720" 
        Width="1080"
        Background="LightGray"
        WindowStartupLocation="CenterScreen" 
        WindowState="Normal"
        UseLayoutRounding="True" 
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextHintingMode="Auto"
        TextOptions.TextRenderingMode="Auto">
    <Window.InputBindings>
        <KeyBinding Command="{Binding NewCommand}" Gesture="Ctrl+N"/>
        <KeyBinding Command="{Binding OpenCommand}" Gesture="Ctrl+O"/>
        <KeyBinding Command="{Binding SaveAsCommand}" Gesture="Ctrl+S"/>
        <KeyBinding Command="{Binding ExitCommand}" Gesture="Alt+F4"/>
        <KeyBinding Command="{Binding ToolNoneCommand}" Key="N" Modifiers=""/>
        <KeyBinding Command="{Binding ToolLineCommand}" Key="L" Modifiers=""/>
        <KeyBinding Command="{Binding ToolRectangleCommand}" Key="R" Modifiers=""/>
        <KeyBinding Command="{Binding ToolEllipseCommand}" Key="E" Modifiers=""/>
        <KeyBinding Command="{Binding ToolBezierCommand}" Key="B" Modifiers=""/>
        <KeyBinding Command="{Binding ToolQBezierCommand}" Key="Q" Modifiers=""/>
        <KeyBinding Command="{Binding ToolTextCommand}" Key="T" Modifiers=""/>
        <KeyBinding Command="{Binding DefaultIsFilledCommand}" Key="F" Modifiers=""/>
        <KeyBinding Command="{Binding SnapToGridCommand}" Key="G" Modifiers=""/>
    </Window.InputBindings>
    <Grid FocusVisualStyle="{x:Null}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:MenuControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto" 
                      Grid.Row="1" 
                      Grid.Column="0" 
                      Margin="5,5,0,5">
            <Grid Width="{Binding Container.Width}" Height="{Binding Container.Height}" Background="DarkGray">
                <controls:ContainerControl/>
                <Canvas x:Name="canvas" Width="{Binding Container.Width}" Height="{Binding Container.Height}" Background="Transparent">
                    <local:LayerElement DataContext="{Binding Container.WorkingLayer}" Renderer="{Binding Path=DataContext.Renderer, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}}"/>
                </Canvas>
            </Grid>
        </ScrollViewer>
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" Background="Transparent" ResizeBehavior="PreviousAndNext"/>
        <TabControl Grid.Row="1" Grid.Column="2" Margin="0,5,5,5">
            <TabItem Header="Layers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0">
                        <MenuItem Command="{Binding AddLayerCommand}" Header="_+"/>
                        <MenuItem Command="{Binding RemoveLayerCommand}" Header="_-"/>
                    </Menu>
                    <controls:LayersControl Grid.Row="1"/>
                    <StackPanel Grid.Row="2" DataContext="{Binding Container.CurrentLayer}" >
                        <GroupBox Header="Name">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Name}" 
                                         TextAlignment="Left" 
                                         VerticalAlignment="Center" 
                                         Margin="1" 
                                         BorderBrush="{x:Null}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Styles">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0">
                        <MenuItem Command="{Binding AddStyleCommand}" Header="_+"/>
                        <MenuItem Command="{Binding RemoveStyleCommand}" Header="_-"/>
                    </Menu>
                    <controls:StylesControl Grid.Row="1"/>
                    <controls:StyleControl DataContext="{Binding Container.CurrentStyle}" Grid.Row="2" Margin="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Shapes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" HorizontalAlignment="Right" Grid.Row="0">
                        <MenuItem Command="{Binding RemoveShapeCommand}" Header="_-"/>
                    </Menu>
                    <controls:ShapesControl Grid.Row="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
