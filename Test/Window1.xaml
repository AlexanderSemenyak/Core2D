<Window x:Class="Test.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Test"
        xmlns:controls="clr-namespace:Test.Controls"
        Title="Test" 
        Height="720" 
        Width="1080"
        Background="LightGray"
        WindowStartupLocation="CenterScreen" 
        WindowState="Normal"
        UseLayoutRounding="True" 
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextHintingMode="Auto"
        TextOptions.TextRenderingMode="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu" 
              Grid.Row="0" 
              Grid.Column="0" 
              Grid.ColumnSpan="3" 
              Background="Transparent">
            <MenuItem Header="_File">
                <MenuItem x:Name="fileExit" Header="E_xit">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsChecked" Value="False"/>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem x:Name="editClear" Header="_Clear"/>
            </MenuItem>
            <MenuItem Header="_Tool">
                <MenuItem x:Name="toolNone" Header="_None">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="None">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="toolLine" Header="_Line">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="Line">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem x:Name="toolRectangle" Header="_Rectangle">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="Rectangle">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem x:Name="toolEllipse" Header="_Ellipse">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="Ellipse">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="toolBezier" Header="_Bezier">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="Bezier">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
                <MenuItem x:Name="toolQBezier" Header="_QBezier">
                    <MenuItem.Style>
                        <Style TargetType="MenuItem">
                            <Setter Property="IsCheckable" Value="True"/>
                            <Setter Property="IsChecked" Value="False"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTool}" Value="QBezier">
                                    <Setter Property="IsChecked" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </MenuItem.Style>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Options">
                <MenuItem x:Name="optionsDefaultIsFilled" 
                          Header="Default is _Filled" 
                          IsCheckable="True" 
                          IsChecked="{Binding DefaultIsFilled}"/>
                <Separator/>
                <MenuItem x:Name="optionsSnapToGrid" 
                          Header="_Snap to Grid" 
                          IsCheckable="True" 
                          IsChecked="{Binding SnapToGrid}"/>
            </MenuItem>
        </Menu>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto" 
                      Grid.Row="1" 
                      Grid.Column="0" 
                      Margin="5,5,0,5">
            <Grid Background="DarkGray"
                  Width="{Binding Width}" 
                  Height="{Binding Height}">
                <Canvas x:Name="canvasLayers" 
                        Width="{Binding Width}" 
                        Height="{Binding Height}" 
                        Background="Transparent"/>
                <Canvas x:Name="canvasWorking" 
                        Width="{Binding Width}" 
                        Height="{Binding Height}" 
                        Background="Transparent"/>
            </Grid>
        </ScrollViewer>
        <GridSplitter Grid.Row="1" 
                      Grid.Column="1" 
                      Width="5" 
                      Background="Transparent" 
                      ResizeBehavior="PreviousAndNext"/>
        <TabControl Grid.Row="1" 
                    Grid.Column="2" 
                    Margin="0,5,5,5">
            <TabItem Header="Layers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" 
                          HorizontalAlignment="Right" 
                          Grid.Row="0">
                        <MenuItem x:Name="layersAdd" Header="_+"/>
                        <MenuItem x:Name="layersRemove" Header="_-"/>
                    </Menu>
                    <ListBox ItemsSource="{Binding Layers}" 
                             SelectedItem="{Binding CurrentLayer}" 
                             BorderBrush="{x:Null}" Grid.Row="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Grid.Row="2" 
                                DataContext="{Binding CurrentLayer}" >
                        <GroupBox Header="Name">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding Name}" 
                                         TextAlignment="Left" 
                                         VerticalAlignment="Center" 
                                         Margin="1" 
                                         BorderBrush="{x:Null}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Styles">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" 
                          HorizontalAlignment="Right" 
                          Grid.Row="0">
                        <MenuItem x:Name="stylesAdd" Header="_+"/>
                        <MenuItem x:Name="stylesRemove" Header="_-"/>
                    </Menu>
                    <ListBox ItemsSource="{Binding Styles}" 
                             SelectedItem="{Binding CurrentStyle}" 
                             Grid.Row="1" 
                             BorderBrush="{x:Null}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="0,5,0,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <controls:StyleControl DataContext="{Binding CurrentStyle}" 
                                           Grid.Row="2" 
                                           Margin="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Shapes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Menu Background="Transparent" 
                          HorizontalAlignment="Right" 
                          Grid.Row="0">
                        <MenuItem x:Name="shapesRemove" Header="_-"/>
                    </Menu>
                    <ListBox ItemsSource="{Binding CurrentLayer.Shapes}" 
                             SelectedItem="{Binding CurrentShape}" 
                             BorderBrush="{x:Null}" 
                             Grid.Row="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0,5,0,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
